{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Framekit Registry Index Schema",
  "description": "Schema for the main Framekit registry index",
  "type": "object",
  "required": ["version", "lastUpdated", "totalDomains", "totalSections", "domains", "sections"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Registry version (semver)"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp (ISO 8601)"
    },
    "totalDomains": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of domains"
    },
    "totalSections": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of sections across all domains"
    },
    "domains": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "icon", "color", "tier", "sectionCount", "tags"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z-]+$"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "color": {
            "type": "string",
            "pattern": "^#[0-9a-fA-F]{6}$"
          },
          "tier": {
            "type": "string",
            "enum": ["free", "pro"]
          },
          "sectionCount": {
            "type": "integer",
            "minimum": 0
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of all section identifiers"
    },
    "stats": {
      "type": "object",
      "properties": {
        "freeSections": {
          "type": "integer",
          "minimum": 0
        },
        "proSections": {
          "type": "integer",
          "minimum": 0
        },
        "totalDownloads": {
          "type": "integer",
          "minimum": 0
        },
        "contributors": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
